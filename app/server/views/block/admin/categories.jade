extends ../../layout_admin

block content
	.row
		.col-lg-12
			h1(class="page-header") Categories
	.row
		.col-lg-12
			.panel.panel-default
				.panel-heading
					button(type="button", class="btn btn-primary") Add category
				.panel-body
					.table-responsive
						table(class="table table-striped table-bordered table-hover", id="dataTables-example")
							thead
								tr
									th Rendering engine
									th Browser
									th Platform(s)
									th Engine version
									th CSS grade
							tbody
								-	for(var i=0; i<10;i++)
										tr(class="odd gradeX")
											td Trident
											td Internet Explorer 4.0
											td Win 95+
											td(class="center") 4
											td(class="center") X