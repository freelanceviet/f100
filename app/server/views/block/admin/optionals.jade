extends ../../layout_admin

block content
	.row
		.col-lg-12
			h1(class="page-header") Optionals
	.row
		.col-lg-12
			.panel.panel-default
				.panel-heading
					button(type="button", class="btn btn-primary", id="event_add_optional") Add optional
				#form_optional.panel-heading(style="display:none")
				.panel-body
					.table-responsive
						table(class="table table-striped table-bordered table-hover", id="optional-table")
							thead
								tr
									th Category name
									th Option
							tbody
								-	for(var i=0; i<resOptional.length;i++)
										tr(class="odd gradeX")
											td= resOptional[i].title_vn
											td(class="center")
												button(type="button", class="btn btn-warning btn_delete_optional btn-circle", data-id=""+resOptional[i]._id+"", style="margin-right:5px")
													i(class="fa fa-times")
												button(type="button", class="btn btn-primary btn-circle")
													i(class="fa fa-list")
block script
	script(src='/plugin/admin/js/optionals.js')