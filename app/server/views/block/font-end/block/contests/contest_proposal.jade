.proposal_form
	h3 New Proposal
	form(method="post", action="/storeContestProposal", id="form_post_proposal")
		.pf_form
			label You proposal details:
			textarea(name="", id="des_proposal", name="des_proposal")
			.attach_files
				.upload
					input(type="file", id="files_proposal_attach", name="files_proposal[]", multiple="")
			.job_proposal_file_content
			.bt_submit
				input(type="submit", value="Send", id="bt_submit_form_proposal")
				input(type="hidden", id="contest_post_type", value="0", name="contest_post_type")
				input(type="hidden", id="contest_post_f", value="0", name="contest_post_f")
				input(type="hidden", id="contest_post_r", value="0", name="contest_post_r")
				input(type="hidden", name="contest_id", value=""+id_contest+"")