extends ../../layout_font_end

block content
	.container
		h2(class="titleMtnIn") Our job database
		.collf_data
			h3(class="titleRtData") CATEGORIES
			if(arrOption['category']!=undefined)
				input(type="hidden", value=""+arrOption['category']+"", id="input_job_category",data-text="category",class="sort_job", data-param="category")
			else
				input(type="hidden", value="", id="input_job_category",data-text="category",class="sort_job", data-param="category")
			.arRtData
				if(resCategoryItem==null)
					ul(class="ctn_collfin")
						-	for(var i=0; i<resCategories.length;i++)
								if(resCategories[i].numjob!=undefined)
									li
										a(href="javascript:void(0);", class="event_click_search_job", data-id=""+resCategories[i]._id+"", data-text="category")= resCategories[i].name_en
											span= "(" + resCategories[i].numjob + ")"
								else
									li
										a(href="javascript:void(0);", class="event_click_search_job", data-id=""+resCategories[i]._id+"", data-text="category")= resCategories[i].name_en
				else
					ul(class="ctn_collfin")
						li
							a(href="") All Categories
						li
							a(href="")= resCategoryItem.name_en
							
			.cte_lfin.cl_sub
				h3(class="titleLtData") Job Type
				input(type="hidden", value="", id="input_job_type",data-text="jobtype",class="sort_job", data-param="jobtype")
				p(class="ip_lfin")
					input(type="radio", value="any", data-text="jobtype",id="jobType", name="jobtype", checked, class="event_click_search_job")
					label(for="jobType") Any
				.frm_ipLf(style="height:70px;")
					p(class="ip_lfin")
						input(type="radio", value="fixed", data-text="jobtype", id="fixed", name="jobtype", class="event_click_search_job")
						label(for="fixed") Fixed
					.sldFix.sldFix_sub
						input(type="hidden", value="75", id="jobtype_fixed_min")
						input(type="hidden", value="300", id="jobtype_fixed_max")
						input(type="text", id="amount-fixed", readonly, style="border:0; color:#f6931f; font-weight:bold;", class="input_slider")
						#slider-range-fixed.srf_sub
				.frm_ipLf(style="height:70px;")
					p(class="ip_lfin")
						input(type="radio", value="perhour", data-text="jobtype", id="perhou", name="jobtype", class="event_click_search_job")
						label(for="perhou") Per Hour
					.sldFix.sldFix_sub
						input(type="hidden", value="75", id="jobtype_perhour_min")
						input(type="hidden", value="300", id="jobtype_perhour_max")
						input(type="text", id="amount-per-hour", readonly, style="border:0; color:#f6931f; font-weight:bold;", class="input_slider")
						#slider-range-per-hour.srf_sub
			.cte_lfin
				h3(class="titleLtData") Working Location
				input(type="hidden", value="", id="input_job_location",data-text="location",class="sort_job", data-param="location")
				p(class="ip_lfin")
					input(type="radio", value="0", data-text="location",id="remote", name="remove", class="event_click_search_job")
					label(for="remote") Remote
				.frm_ipLf
					p(id="acCheckin", class="ip_lfin")
						input(type="radio", value="1", data-text="location",id="onsite", name="onsite", class="event_click_search_job")
						label(for="onsite") On site
					ul(class="innFrmLf")
						-	for(var i=0;i<resLocations.length; i++)
								li(class="ck_lfin")
									input(type="radio", value=""+resLocations[i].lo_name+"", data-text="location", name="localsite", parent="onsite", class="event_click_search_job")
									label(for="hcm")= resLocations[i].lo_name
			.cte_lfin
				h3(class="titleLtData") Job Status
				input(type="hidden", value="", id="input_job_status", data-text="status",class="sort_job", data-param="status")
				p(class="ip_lfin")
					input(type="radio", value="", id="all", name="jbStatus", data-text="status",checked, class="event_click_search_job")
					label(for="all") All
				p(class="ip_lfin")
					input(type="radio", value="0", id="open", data-text="status", name="jbStatus", class="event_click_search_job")
					label(for="open") Open
				p(class="ip_lfin")
					input(type="radio", value="1", id="close",  data-text="status", name="jbStatus", class="event_click_search_job")
					label(for="close") Close
		.colrt_data
			h3(class="titleNobg")
				span “Design”
				| 1165 Job found
			.boxsea
				.seaData
					label Search
					input(class="ip_seaData", type="text", placeholder="Type a search term and hit Enter...")
				.sl_jbStaData
					label Job Status
					select(class="default-usage-select")
						option(class="option") All
						option Web Development(5,018)
						option Video, Photo & Audio(4,424)
						option Sales & Marketing(3,974)
						option Business Support(2,816)
						option Writing & Translation(2,665)
						option Social media(1,622)
				.sl_jbStaData
					label Sort by
					select(class="default-usage-select")
						option(class="option") All
						option Web Development(5,018)
						option Video, Photo & Audio(4,424)
						option Sales & Marketing(3,974)
						option Business Support(2,816)
						option Writing & Translation(2,665)
						option Social media(1,622)
			#list_job_search
				-	for(var i=0;i<resJobs.length;i++)
						.ctn_ltData
							.avaJbData
								img(src="images/avaPst.jpg", alt="")
							.txtpst
								h4
									a(class="titPst coJob", href="/jobdetail?id="+resJobs[i]._id+"&name="+resJobs[i].project_name.replace(/ /g,"-")+"")= resJobs[i].project_name
								p Oxygen Studio Designs Pte Ltd
								ul(class="lstPst")
									li
										p Min 5 years agency experience
									li 
										p Strong conceptual thinking – both visual and interactive.
									li 
										p Salary will commensurate with education and experience.
								p Skill: 
									span Creativity, Drawing, HTML
							.pcePst
								p(class="mainPce") $18,000,000 VND
								p SING, VN, INDO
							.dtPst
								p 96 Proposal
								p 3 days ago
							.sendPropo
								a(href="", class="btnmore btnPropo") Send proposal
				.pagMore
					if(arrOption['page']!=undefined)
						input(type="hidden", value=""+arrOption['page']+"", id="input_job_page",data-text="page",class="sort_job", data-param="page")
					else
						input(type="hidden", value="", id="input_job_page",data-text="page",class="sort_job", data-param="page")
					if(resNumJobs>7)
						ul(class="pagination")
							-	var num_p = 0;
							if(resNumJobs%7>0)
								-	var num_p = parseInt(resNumJobs/7)+1
							else
								-	var num_p = parseInt(resNumJobs/7)
							li
								a(class="prepag", href="")
							-	for(var i=1; i<=num_p;i++)
									li
										if(i==1)
											a(data-id=""+i+"", data-text="page", class="actpag event_click_search_job", href="javascript:void(0);")= i
										else
											a(data-id=""+i+"", data-text="page", href="javascript:void(0);", class="event_click_search_job")= i
							li
								a(class="nextpag", href="")
block scripts
	script(src='/javascripts/views/jobs.js')