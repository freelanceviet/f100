extends ../../layout_font_end

block content
	#content
		#contest_detail_view
			.banner_contest
				if(user && user._id==resContestItem.user_info.user_id)
					form(method="post", action="/change_banner_contest_image", id="edit-event-contest-banner")
						input(id="photoimg-contest-banner", type="file", name="photos")
						input(type='hidden', name="id_contest", value=""+resContestItem._id+"")
				if(resContestItem.image_banner!=undefined)
					img(src='/upload/profile_avatar?type=resize&width=1000&height=333&name='+resContestItem.image_banner.public_id+'.'+resContestItem.image_banner.format+'', class="banner_contest_jq")
				else
					img(src="/images/allthecrg-banner.jpg", class="banner_contest_jq")
				.avatar
					.avatar-content
						if(resContestItem.image_avatar!=undefined)
							img(src='/upload/profile_avatar?type=resize&width=130&height=130&name='+resContestItem.image_avatar.public_id+'.'+resContestItem.image_avatar.format+'')
						else
							img(src="/images/default_contest.png")
						if(user && user._id==resContestItem.user_info.user_id)
							form(method="post", action="/change_avatar_contest_image", id="edit-event-contest-avatar")
								input(id="photoimg-contest-avatar", type="file", name="photos")
								input(type='hidden', name="id_contest", value=""+resContestItem._id+"")
				.title_contest= resContestItem.project_name
				.like_share
					a(href="") Like
					a(href="") Share
				.list_option_su
					.los_item Timeline
					.los_item Cotest Brief
					.los_item Proposals
				.submitssion Submission
			.content_contest
				.c2_left
					.c2_l_item
						.c2li_header
							h3 Prize
					.c2_l_item
						.c2li_header
							h3 Deadline & Important Date
					.c2_l_item
						.c2li_header
							h3 People
					.c2_l_item
						.c2li_header
							h3 Recently Proposals
					.c2_l_item
						.c2li_header
							h3 Similar contest
				.c2_right
					.post_comment_contest
						form(method="post", action="/post_comment_contest", id="post-comment-contest")
							input(type='hidden', name="id_contest", value=""+resContestItem._id+"")
							input(type='hidden', name="id_file", value="0", id="id_file")
							input(type="hidden", id="contest_post_type", name="contest_post_type", value="0")
							.pcc_header
								span Post
									input(type="file", multiple="true", name="ac_img[]", class="tc0_bt_img", id="photoimg-contest-comment")
							.pcc_content
								textarea(name="f_comment_contest", id="f_comment_contest")
							.pcc_image_content
							.pcc_buttom
								input(type="submit", value="Comment", id="bt_submit_contest")
					.list_comment_contest
						-	for(var i=0; i<resComments.length;i++)
								.l2c_item
									.l2ci_info_user
										img(src=""+resComments[i].user_image+"")
										a(href="")= resComments[i].user_fullname
										span= resComments[i].time_sort
									.l2ci_description
										span= resComments[i].comment
									.l2ci_image
										if(resComments[i].file!=undefined)
											-	for(var j=0; j<resComments[i].file.length; j++)
													img(src='/upload/contests?type=resize&width=400&height=300&name='+resComments[i].file[j].public_id+'.'+resComments[i].file[j].format+'')
										
block script
	script(src='/javascripts/form-validators/jobContestValidator.js')
	script(src='/javascripts/views/contest_detail.js')