extends ../../layout_font_end

block content
	.container
		h2(class="titleMtnIn") Freelance Listing
		.collf_data
			h3(class="titleRtData") CATEGORIES
			if(arrOption['category']!=undefined)
				input(type="hidden", value=""+arrOption['category']+"", id="input_hourlie_category",data-text="category",class="sort_hourlie", data-param="category")
			else
				input(type="hidden", value="", id="input_hourlie_category",data-text="category",class="sort_hourlie", data-param="category")
			.arRtData
				if(resCategoryItem==null)
					ul(class="ctn_collfin")
						-	for(var i=0; i<resCategories.length;i++)
								if(resCategories[i].numhourlie!=undefined)
									li
										a(href="javascript:void(0);", class="event_click_search_hourlie", data-id=""+resCategories[i]._id+"", data-text="category")= resCategories[i].name_en
											span= "(" + resCategories[i].numhourlie + ")"
								else
									li
										a(href="javascript:void(0);", class="event_click_search_hourlie", data-id=""+resCategories[i]._id+"", data-text="category")= resCategories[i].name_en
				else
					ul(class="ctn_collfin")
						li
							a(href="") All Categories
						li
							a(href="")= resCategoryItem.name_en
							
			.cte_lfin.cl_sub
				h3(class="titleLtData") Hourlie Type
				p(class="ip_lfin")
					input(type="radio", value="Any", id="hourlieType", name="hourlietype")
					label(for="hourlieType") Any
				.frm_ipLf(style="height:70px;")
					p(class="ip_lfin")
						input(type="radio", value="Any", id="fixed", name="hourlietype")
						label(for="fixed") Fixed
					.sldFix.sldFix_sub
						input(type="text", id="amount-fixed", readonly, style="border:0; color:#f6931f; font-weight:bold;", class="input_slider")
						#slider-range-fixed.srf_sub
				.frm_ipLf(style="height:70px;")
					p(class="ip_lfin")
						input(type="radio", value="Any", id="perhou", name="hourlietype")
						label(for="perhou") Per Hour
					.sldFix.sldFix_sub
						input(type="text", id="amount-per-hour", readonly, style="border:0; color:#f6931f; font-weight:bold;", class="input_slider")
						#slider-range-per-hour.srf_sub
			.cte_lfin
				h3(class="titleLtData") Working Location
				input(type="hidden", value="", id="input_hourlie_location",data-text="location",class="sort_hourlie", data-param="location")
				p(class="ip_lfin")
					input(type="radio", value="0", data-text="location",id="remote", name="local", class="event_click_search_hourlie")
					label(for="remote") Remote
				.frm_ipLf
					p(id="acCheckin", class="ip_lfin")
						input(type="radio", value="1", data-text="location",id="onsite", name="local", class="event_click_search_hourlie")
						label(for="onsite") On site
					ul(class="innFrmLf")
						-	for(var i=0;i<resLocations.length; i++)
								li(class="ck_lfin")
									input(type="radio", value=""+resLocations[i].lo_name+"", id="hcm", data-text="location", name="localsite", parent="onsite", class="event_click_search_hourlie")
									label(for="hcm")= resLocations[i].lo_name
			.cte_lfin
				h3(class="titleLtData") Hourlie Status
				input(type="hidden", value="", id="input_hourlie_status", data-text="status",class="sort_hourlie", data-param="status")
				p(class="ip_lfin")
					input(type="radio", value="", id="all", name="jbStatus", data-text="status",checked, class="event_click_search_hourlie")
					label(for="all") All
				p(class="ip_lfin")
					input(type="radio", value="0", id="open", data-text="status", name="jbStatus", class="event_click_search_hourlie")
					label(for="open") Open
				p(class="ip_lfin")
					input(type="radio", value="1", id="close",  data-text="status", name="jbStatus", class="event_click_search_hourlie")
					label(for="close") Close
		.colrt_data
			h3(class="titleNobg")
				span “Design”
				| 1165 Hourlie found
			.boxsea
				.seaData
					label Search
					input(class="ip_seaData", type="text", placeholder="Type a search term and hit Enter...")
				.sl_jbStaData
					label Hourlie Status
					select(class="default-usage-select")
						option(class="option") All
						option Web Development(5,018)
						option Video, Photo & Audio(4,424)
						option Sales & Marketing(3,974)
						option Business Support(2,816)
						option Writing & Translation(2,665)
						option Social media(1,622)
				.sl_jbStaData
					label Sort by
					select(class="default-usage-select")
						option(class="option") All
						option Web Development(5,018)
						option Video, Photo & Audio(4,424)
						option Sales & Marketing(3,974)
						option Business Support(2,816)
						option Writing & Translation(2,665)
						option Social media(1,622)
			.coverAll
				#list_hourlie_search
					-	for(var i=0;i<resHourlies.length;i++)
							.lstItem
								.coverImg
									a(href="/hourliedetail?id="+resHourlies[i]._id+"&value="+resHourlies[i].project_name.replace(/ /g,"-")+"", class="linkCoImg")
										img(class="cover_imgFreelist", src="images/228x190.jpg", title="", alt="")
										.cover_hov
											span(class="vwHov") Views:
												span 16,000
											span(class="soldHov") sold
												span 36
								.coverInfo
									.coverInfo_statis
										p I design your house with beautiful images and architecture
									.coverFt
										.avaJbData
											a(href="")
												img(src="images/avaPst.jpg")
										.naCoverFt
											a(class="auCover") John Doe
											p $10,000 USD
										.rtNaCoFt
											p Vietnam
					.pagMore
						if(arrOption['page']!=undefined)
							input(type="hidden", value=""+arrOption['page']+"", id="input_hourlie_page",data-text="page",class="sort_hourlie", data-param="page")
						else
							input(type="hidden", value="", id="input_hourlie_page",data-text="page",class="sort_hourlie", data-param="page")
						if(resNumHourlies>9)
							ul(class="pagination")
								-	var num_p = 0;
								if(resNumHourlies%9>0)
									-	var num_p = parseInt(resNumHourlies/9)+1
								else
									-	var num_p = parseInt(resNumHourlies/9)
								li
									a(class="prepag", href="")
								-	for(var i=1; i<=num_p;i++)
										li
											if(i==1)
												a(data-id=""+i+"", data-text="page", class="actpag event_click_search_hourlie", href="javascript:void(0);")= i
											else
												a(data-id=""+i+"", data-text="page", href="javascript:void(0);", class="event_click_search_hourlie")= i
								li
									a(class="nextpag", href="")
block script
	script(src='/javascripts/views/hourlies.js')