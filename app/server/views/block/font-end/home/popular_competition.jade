.container
	h2(class="titleMtn") Popular competition
	ul(class="popu")
		-	for(var i=0; i<resContests.length; i++)
				li
					.ctnPopu
						.arThumb
							a(href="/contestdetail?id="+resContests[i]._id+"&tab=brief&value="+resContests[i].project_name.replace(/ /g,"-")+"", class="thumbPopu")
								if(resContests[i].image_avatar==undefined)
									img(src="images/thumb.jpg", alt="Web developer")
								else
									img(src='/upload/profile_avatar?type=resize&width=400&height=350&name='+resContests[i].image_avatar.public_id+'.'+resContests[i].image_avatar.format+'', alt="Web developer")
						.txtCatePopu
							a(href="/contestdetail?id="+resContests[i]._id+"&tab=brief&value="+resContests[i].project_name.replace(/ /g,"-")+"", class="titCatePopu")= resContests[i].project_name
							.lfCtePpu
								a(href="/profile?value=null&_id="+resContests[i].user_info.user_id+"")
									p= "By: "+ resContests[i].user_info.user_name_l+ " "+resContests[i].user_info.user_name_f
							.rtCtePpu
								p(class="list_contest_item", data-price=""+resContests[i].budget+"", data-type=""+resContests[i].currency_name+"")= resContests[i].budget+" "+resContests[i].currency_name
	.vMore
		a(href="/contests", class="btnmore") View more